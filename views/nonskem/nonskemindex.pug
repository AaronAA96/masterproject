html
  head
    title= title
    
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
    style
      include ../../styles/bootstrap.css
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      h1.text-center(style={color: 'White'})= message
    div.container
      div
        br
      
        br
        div
          each val in accounts
            .card.w-100.border-primary
              .card-body
                h2.card-title #{val.AccountName}
                br
                h4.card-text Current Amount: &pound;#{val.CurrentAmount}
                br
                a.btn.btn-primary(href='/nonskem/checkbalance/' + val.AccountID) Check Balance
                br
                br
                a.btn.btn-danger(href='/nonskem/transferpayment/'+ + val.AccountID) Transfer Payment   
            br
         
        